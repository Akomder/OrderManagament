@model OrderManagementWeb.Models.ViewModels.BestSellingItemsViewModel

@{
    ViewBag.Title = "Best Selling Items Report";
}

<div class="row mb-3">
    <div class="col-12">
        <h2><i class="fas fa-trophy"></i> Best Selling Items Report</h2>
        <hr />
    </div>
</div>

<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filters</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("BestSellingItems", "Report", FormMethod.Get, new { @class = "row g-3" }))
        {
            <div class="col-md-4">
                <label class="form-label">From Date</label>
                @Html.TextBoxFor(m => m.FromDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="col-md-4">
                <label class="form-label">To Date</label>
                @Html.TextBoxFor(m => m.ToDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Generate Report
                </button>
            </div>
        }
    </div>
</div>

@if (Model.Items != null && Model.Items.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th class="text-center">Total Quantity Sold</th>
                            <th class="text-end">Total Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rank = 1;
                        }
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @if (rank <= 3)
                                    {
                                        <i class="fas fa-trophy text-warning"></i>
                                    }
                                    @rank
                                </td>
                                <td>@item.ProductName</td>
                                <td class="text-center">@item.TotalQuantity</td>
                                <td class="text-end">@item.TotalRevenue.ToString("C0")</td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-info">
                            <td colspan="2" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-center"><strong>@Model.Items.Sum(i => i.TotalQuantity)</strong></td>
                            <td class="text-end"><strong>@Model.Items.Sum(i => i.TotalRevenue).ToString("C0")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else if (Model.FromDate.HasValue || Model.ToDate.HasValue)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No data found for the selected date range.
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Please select a date range and click "Generate Report" to view results.
    </div>
}
