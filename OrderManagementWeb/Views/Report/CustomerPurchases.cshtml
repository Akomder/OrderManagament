@model OrderManagementWeb.Models.ViewModels.CustomerPurchasesViewModel

@{
    ViewBag.Title = "Customer Purchases Report";
}

<div class="row mb-3">
    <div class="col-12">
        <h2><i class="fas fa-shopping-bag"></i> Items Purchased by Customer Report</h2>
        <hr />
    </div>
</div>

<div class="card mb-3">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filters</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("CustomerPurchases", "Report", FormMethod.Get, new { @class = "row g-3" }))
        {
            <div class="col-md-4">
                <label class="form-label">Agent</label>
                @Html.DropDownListFor(m => m.AgentId, ViewBag.Agents as SelectList, "-- Select Agent --", new { @class = "form-select" })
            </div>
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                @Html.TextBoxFor(m => m.FromDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                @Html.TextBoxFor(m => m.ToDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-search"></i> Generate
                </button>
            </div>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.AgentName))
{
    <div class="alert alert-info">
        <h5><i class="fas fa-user"></i> Agent: <strong>@Model.AgentName</strong></h5>
    </div>
}

@if (Model.Purchases != null && Model.Purchases.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Order Number</th>
                            <th>Order Date</th>
                            <th>Product Name</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var purchase in Model.Purchases)
                        {
                            <tr>
                                <td>@purchase.OrderNumber</td>
                                <td>@purchase.OrderDate.ToString("yyyy-MM-dd")</td>
                                <td>@purchase.ProductName</td>
                                <td class="text-center">@purchase.Quantity</td>
                                <td class="text-end">@purchase.Amount.ToString("C0")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-info">
                            <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-center"><strong>@Model.Purchases.Sum(p => p.Quantity)</strong></td>
                            <td class="text-end"><strong>@Model.Purchases.Sum(p => p.Amount).ToString("C0")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else if (Model.AgentId.HasValue)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No purchases found for the selected agent and date range.
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Please select an agent and click "Generate" to view results.
    </div>
}
