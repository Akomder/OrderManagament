@model OrderManagementWeb.Models.ViewModels.PurchaseSummaryViewModel

@{
    ViewBag.Title = "Purchase Summary Report";
}

<div class="row mb-3">
    <div class="col-12">
        <h2><i class="fas fa-chart-pie"></i> Customer Purchase Summary Report</h2>
        <hr />
    </div>
</div>

<div class="card mb-3">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filters</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("PurchaseSummary", "Report", FormMethod.Get, new { @class = "row g-3" }))
        {
            <div class="col-md-5">
                <label class="form-label">From Date</label>
                @Html.TextBoxFor(m => m.FromDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="col-md-5">
                <label class="form-label">To Date</label>
                @Html.TextBoxFor(m => m.ToDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-info w-100">
                    <i class="fas fa-search"></i> Generate
                </button>
            </div>
        }
    </div>
</div>

@if (Model.Summary != null && Model.Summary.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Agent Name</th>
                            <th class="text-center">Total Orders</th>
                            <th class="text-center">Total Items</th>
                            <th class="text-end">Total Amount Spent</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rank = 1;
                        }
                        @foreach (var summary in Model.Summary)
                        {
                            <tr>
                                <td>@rank</td>
                                <td>@summary.AgentName</td>
                                <td class="text-center">@summary.TotalOrders</td>
                                <td class="text-center">@summary.TotalItems</td>
                                <td class="text-end">@summary.TotalAmountSpent.ToString("C0")</td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-info">
                            <td colspan="2" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-center"><strong>@Model.Summary.Sum(s => s.TotalOrders)</strong></td>
                            <td class="text-center"><strong>@Model.Summary.Sum(s => s.TotalItems)</strong></td>
                            <td class="text-end"><strong>@Model.Summary.Sum(s => s.TotalAmountSpent).ToString("C0")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else if (Model.FromDate.HasValue || Model.ToDate.HasValue)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No data found for the selected date range.
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Please select a date range and click "Generate" to view results.
    </div>
}
