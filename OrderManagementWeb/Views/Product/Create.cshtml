@model OrderManagementWeb.Models.Product

@{
    ViewBag.Title = "Create Product";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2><i class="fas fa-box"></i> Create Product</h2>
        <hr />

        @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @class = "needs-validation" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.ProductName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Enter product name" })
                        @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ProductCode, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control", placeholder = "Enter unique product code" })
                        @Html.ValidationMessageFor(m => m.ProductCode, "", new { @class = "text-danger" })
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Price, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01", min = "0", placeholder = "0.00" })
                                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Stock, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number", min = "0", placeholder = "0" })
                                @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3", placeholder = "Enter product description" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3 form-check">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", @checked = "checked" })
                        @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
