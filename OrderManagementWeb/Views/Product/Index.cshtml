@model IEnumerable<OrderManagementWeb.Models.Product>

@{
    ViewBag.Title = "Products";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-box"></i> Products</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="get" class="row g-3 mb-3">
            <div class="col-md-9">
                <input type="text" name="searchString" class="form-control" placeholder="Search by product name or code..." value="@Request.QueryString["searchString"]" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Product Code</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductCode</td>
                                <td>@item.ProductName</td>
                                <td>@item.Price.ToString("C0")</td>
                                <td>@item.Stock</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    @if (item.IsActive)
                                    {
                                        <button type="button" class="btn btn-sm btn-danger delete-btn" data-id="@item.ProductId">
                                            <i class="fas fa-trash"></i> Deactivate
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No products found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.delete-btn').click(function () {
                var productId = $(this).data('id');
                if (confirm('Are you sure you want to deactivate this product?')) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    $.post('@Url.Action("Delete")', { 
                        id: productId,
                        __RequestVerificationToken: token 
                    }, function (result) {
                        if (result.success) {
                            alert(result.message);
                            location.reload();
                        } else {
                            alert(result.message);
                        }
                    });
                }
            });
        });
    </script>
}

@Html.AntiForgeryToken()
